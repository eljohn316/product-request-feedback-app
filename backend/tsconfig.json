{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["es2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "moduleDetection": "force",
    "strict": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
